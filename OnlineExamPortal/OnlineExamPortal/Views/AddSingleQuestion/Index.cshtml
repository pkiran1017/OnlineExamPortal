@model IEnumerable<OnlineExamPortal.Models.Question>


@{
    ViewData["Title"] = "Index";
    @using OnlineExamPortal.Models 
}
<!DOCTYPE html>
<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>@ViewData["Title"]</title>

    <style>
        .table {
            width: 100%;
            border-collapse: collapse;
            margin-top: 20px; /* Add margin at the top of the table */
        }

            .table th, .table td {
                border: 1px solid #ddd;
                padding: 8px;
                text-align: left;
            }

            .table th {
                background-color: #f2f2f2;
            }

            .table tbody tr:nth-child(even) {
                background-color: #f9f9f9;
            }

            .table a {
                text-decoration: none;
                color: #007bff;
                margin-right: 8px;
            }

                .table a:hover {
                    text-decoration: underline;
                }
        .dashb h1 {
            position: relative;
            font-size: 20px;
            font-weight: 700;
            letter-spacing: 0px;
            text-transform: uppercase;
            width: 150px;
            text-align: center;
            margin: auto;
            margin-bottom: 15px;
            white-space: nowrap;
            border: 2px solid #222;
            padding: 5px 11px 3px 11px;
        }

            .dashb h1:before, .dashb h1:after {
                background-color: #c50000;
                position: absolute;
                content: '';
                height: 7px;
                width: 7px;
                border-radius: 50%;
                bottom: 12px;
            }

            .dashb h1:before {
                left: -20px;
            }

            .dashb h1:after {
                right: -20px;
            }
        .add-question {
            display: inline-block;
            padding: 4px 8px;
            margin-right: 10px;
            text-decoration: none;
            color: #fff;
            background-color: #007bff;
            border-radius: 4px;
            transition: background-color 0.3s;
        }

            .add-question:hover {
                background-color: #0056b3;
                text-decoration: none;
                color: #fff;
            }

        .topic-select {
            display: inline-block;
            margin-right: 10px;
            position: relative;
        }

            .topic-select select {
                appearance: none;
                -webkit-appearance: none;
                -moz-appearance: none;
                background-color: #fff;
                border: 1px solid #ccc;
                padding: 8px;
                padding-right: 25px;
                border-radius: 4px;
                cursor: pointer;
                outline: none;
            }

            .topic-select::before {
                content: '\25BC';
                position: absolute;
                top: 52%;
                right: 4px;
                transform: translateY(-50%);
                pointer-events: none;
            }
    </style>
</head>

<body>
    <div class="dashb">
    <h1>Dashboard</h1>
    </div>

    <form method="get" asp-action="Index">
        <div class="add-question">
            <a asp-action="Create" class="add-question">Add Single Question</a>
        </div>
        <div class="add-question">
            <a asp-action="AddBulkQuestions" class="add-question">Import From Excel</a>
        </div>
        <div class="topic-select">
            @Html.DropDownList("selectedTopic", new SelectList(ViewBag.Topics, "TopicId", "TopicName"), "All Questions")
        </div>
        <button type="submit" class="add-question">Filter</button>
        <div class="add-question">
            <a asp-action="ManageUsers" class="add-question">Manage Users</a>
        </div>
        <div class="add-question">
            <a asp-action="ExamPage" class="add-question">Exam Page</a>
        </div>
    </form>

<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Type)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Question1)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Option1)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Option2)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Option3)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Option4)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Option5)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.CorrectOption)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.DifficultyLevel)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Topic)
            </th>
            <th>
                <a>More_Options</a>
            </th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Type)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Question1)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Option1)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Option2)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Option3)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Option4)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Option5)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.CorrectOption)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.DifficultyLevel)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Topic.TopicId)
                </td>
                <td>
                    <a asp-action="Edit" asp-route-id="@item.QuestionId">Edit</a> |
                    <a asp-action="Details" asp-route-id="@item.QuestionId">Details</a> |
                    <a asp-action="Delete" asp-route-id="@item.QuestionId">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>
</body>
</html>
@model OnlineExamPortal.Models.Registration

<html>
<head>
    <meta charset="utf-8">
    <title>Login</title>
    <link rel="stylesheet" href="~/css/Login_Registration.css">
</head>

<body>
    <div class="container">
        <div class="wrapper">
            <div class="title">
                Login
            </div>
            <div asp-validation-summary="All" class="text-danger"></div>
            <form asp-action="Login" method="post">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <div class="form-group field">
                    <input asp-for="Email" class="form-control" placeholder="Email" />
                    <span asp-validation-for="Email" class="text-danger"></span>
                </div>
                <div class="form-group field">
                    <input asp-for="Password" class="form-control" placeholder="Password" />
                    <span asp-validation-for="Password" class="text-danger"></span>
                </div>
                <div class="text-danger">@ViewData["ErrorMessage"]</div>

                <div class="form-group field">
                    <input type="submit" value="Login" />
                </div>
                <div class="pass-link">
                    <a asp-action="ForgetPass"> Forgot Password </a>
                    <span class="separator"> | </span>
                    <a asp-action="Registration"> Register Here! </a>
                </div>
               
            </form>
        </div>
    </div>

    @section Scripts {
        @{
            await Html.RenderPartialAsync("_ValidationScriptsPartial");
        }
    }
</body>
</html>
